<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/order_vis"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <ImageView
                    android:orientation="vertical"
                    android:id="@+id/orderItemColorLeft"
                    android:background="@color/statusA"
                    android:layout_weight="0.02"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="match_parent">

                </ImageView>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_weight="3.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                   <LinearLayout
                       android:weightSum="2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/order_pedido"
                           android:text="Pedido #"
                           android:textStyle="bold"
                           android:textColor="#000"
                           android:textSize="16dp"
                           android:layout_weight="1.4"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:id="@+id/order_data"
                           android:gravity="right"
                           android:text="00/00/0000"
                           android:textColor="#000"
                           android:textSize="16dp"
                           android:layout_weight="0.6"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />

                   </LinearLayout>

                    <TextView
                        android:id="@+id/order_nome"
                        android:text="Nome:"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/order_pagamento"
                        android:text="Pagamento:"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/order_id"
                        android:text="EndereÃ§o:"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/order_price"
                        android:text="Total:"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/order_ac"
                            android:textSize="12sp"
                            android:layout_marginHorizontal="8dp"
                            android:text="ACEITAR"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/borda_edit"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/order_re"
                            android:textSize="12sp"
                            android:layout_marginHorizontal="8dp"
                            android:text="RECUSAR"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/borda_edit"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/order_de"
                            android:textSize="12sp"
                            android:layout_marginHorizontal="8dp"
                            android:text="DETALHES"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/borda_edit"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:background="#00f"
            android:paddingVertical="8dp"
            android:orientation="vertical"
            android:id="@+id/order_iniciapreparo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_iniciatexto"
                android:textStyle="bold"
                android:text="INICIAR  PREPARO"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>