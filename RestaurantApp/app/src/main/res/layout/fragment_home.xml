<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.newcart.pariscartrestaurant.HomeFragment">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="0.8"
                android:layout_marginVertical="16dp"
                android:src="@drawable/parislogowr"
                android:layout_width="0dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>
    
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatus"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/trocaStatus"
                    android:orientation="vertical"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/meuStatus"
                        android:textSize="18dp"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/toqueStatus"
                        android:textSize="16dp"
                        android:text=""
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="10dp"
                android:text="Histórico:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:weightSum="2"
                android:layout_marginHorizontal="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="180dp">

                    <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/dash_rsprice"
                            android:textStyle="bold"
                            android:text="R$0,00"
                            android:textSize="24dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/dash_btcprice"
                            android:layout_marginTop="12sp"
                            android:text="BTC 0.000"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="#2CB1BD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="180dp">

                    <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Pedidos"
                            android:textSize="16dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/dash_pedidos"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold"
                            android:text="0"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:text="Último Pedido:"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/dash_lastpedido"
                            android:textStyle="italic"
                            android:text="11 out 2020"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="10dp"
                android:text="Meus Pratos:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_foods"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:background="@drawable/button"
                android:orientation="vertical"
                android:id="@+id/linlay"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="Adicionar novo prato"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </LinearLayout>

        </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>

</FrameLayout>