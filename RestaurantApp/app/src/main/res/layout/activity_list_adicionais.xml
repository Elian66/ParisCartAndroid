<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newcart.pariscartrestaurant.ListAdicionaisActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_listAds"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/acomp_extraADD"
            android:layout_marginHorizontal="8dp"
            android:textColor="#fff"
            android:text="Adicionar acompanhamento extra"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/acomp_extraUPDATE"
            android:layout_marginHorizontal="8dp"
            android:textColor="#fff"
            android:text="ATUALIZAR DETALHES DO PRATO"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/acomp_extraDELETE"
            android:layout_marginHorizontal="8dp"
            android:textColor="#fff"
            android:text="EXCLUIR PRATO DO CARDAPIO"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>