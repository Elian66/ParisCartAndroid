<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newcart.pariscartrestaurant.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/profile_img"
                    android:src="#eee"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="80dp" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="Nome do Usuário"
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:text="Endereço"
                        android:id="@+id/profile_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:text="Telefone: +5592992389735"
                android:id="@+id/profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:id="@+id/prof_prof"
                android:background="#eee"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#000"
                    android:text="Editar Perfil"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prof_vendas"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_restaurant_menu_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#000"
                    android:text="Vendas e Pedidos"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prof_moto"
                android:background="#eee"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_motorcycle_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#000"
                    android:text="Motoristas"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prof_bitcoin"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/qrcodeicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#000"
                    android:text="Carteira Cripto"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prof_avalia"
                android:background="#eee"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star_half_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#000"
                    android:text="Avaliações"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prof_help"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_help_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#000"
                    android:text="Ajuda"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prof_exit"
                android:background="#eee"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="19dp"
                    android:textColor="#f00"
                    android:text="Sair da Conta"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:gravity="right"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:text="ParisCart - Restaurantes v4.0.1"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>