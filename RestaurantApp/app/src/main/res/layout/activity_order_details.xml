<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#dedede"
    android:layout_height="match_parent"
    tools:context="com.newcart.pariscartrestaurant.OrderDetailsActivity">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/appbarLayout"
        android:text="Detalhes do Pedido"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_below="@id/appbarLayout"
        android:id="@+id/od1"
        android:weightSum="2"
        android:background="#292e32"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ODPDAY"
                android:paddingRight="5dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="R$0,00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/atualizar_status"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ODPSTATUS"
                android:paddingVertical="2dp"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="12dp"
                android:background="#0A0"
                android:gravity="center"
                android:paddingRight="5dp"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="13sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingHorizontal="5dp"
                android:textColor="#fff"
                android:paddingVertical="5dp"
                android:text="ATUALIZAR STATUS"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/od1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/od2"
                android:orientation="vertical"
                android:background="#292e32"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ODPPAYWAY"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:paddingHorizontal="15dp"
                    android:text="Pagamento em: Dinheiro"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ODPADDRESS"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:paddingHorizontal="15dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ODPPhone"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:paddingHorizontal="15dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/imprimir"
                android:textColor="#fff"
                android:text="IMPRIMIR PEDIDO"
                android:background="@color/colorPrimary"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <androidx.cardview.widget.CardView
                android:layout_below="@id/od2"
                android:id="@+id/odx"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#292e32"
                        android:text="Detalhes"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_orderD"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>