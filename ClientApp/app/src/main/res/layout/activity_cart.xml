<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newcart.newpariscart.Cart">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:paddingVertical="16dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cart_back"
                        android:tint="@color/colorPrimary"
                        android:layout_marginHorizontal="24dp"
                        android:src="@drawable/ic_chevron_left_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:tint="@color/colorPrimary"
                        android:layout_marginHorizontal="24dp"
                        android:src="@drawable/ic_shopping_cart_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Meu Carrinho"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="32dp"
                    android:id="@+id/listCart"
                    android:background ="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="#eee"
                    android:layout_marginHorizontal="32dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical"
                        android:id="@+id/abcde"
                        android:background="#eee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="56dp"
                            app:cardElevation="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginTop="16dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp"
                                    android:text="Endereço para Entrega:"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <LinearLayout
                                    android:layout_marginTop="8dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_weight="1.8"
                                        android:textColor="#000"
                                        android:id="@+id/tab2_edt_address"
                                        android:textSize="18dp"
                                        android:hint="Seu Endereço"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />

                                    <ImageView
                                        android:tint="@color/colorPrimary"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_place_black_24dp"
                                        android:layout_weight="0.2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <TextView
                                    android:layout_marginTop="8dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp"
                                    android:text="Adicionar Comentários Especiais:"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <LinearLayout
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:layout_weight="1.8"
                                        android:textColor="#000"
                                        android:id="@+id/tab2_edt_comments"
                                        android:textSize="18dp"
                                        android:hint="Detalhes da entrega, troco, etc."
                                        android:fontFamily="sans-serif"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />

                                    <ImageView
                                        android:tint="@color/colorPrimary"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_comment_black_24dp"
                                        android:layout_weight="0.2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:background="#bdbdbd"
                            android:layout_width="match_parent"
                            android:layout_height="0.05dp">


                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="24dp"
                            app:cardElevation="8dp"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@color/colorPrimary"
                                    android:text="USE BITCOIN E GANHE DESCONTOS"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <LinearLayout
                                    android:layout_marginTop="16dp"
                                    android:weightSum="2"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="14sp"
                                        android:text="Subtotal:"
                                        android:layout_weight="1.4"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent" />

                                    <TextView
                                        android:id="@+id/subtotal"
                                        android:gravity="end"
                                        android:textSize="14sp"
                                        android:textColor="#000"
                                        android:text="R$0,00"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent" />

                                </LinearLayout>

                                <LinearLayout
                                    android:weightSum="2"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="14sp"
                                        android:text="Taxa de Entrega"
                                        android:layout_weight="1.4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/taxprice"
                                        android:gravity="end"
                                        android:textSize="14sp"
                                        android:textColor="#000"
                                        android:text="R$0,00"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="4dp"
                                    android:background="#bdbdbd"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.05dp">


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:weightSum="2"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:gravity="center_vertical"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="16sp"
                                        android:text="Valor Total:"
                                        android:layout_weight="1.4"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent" />

                                    <TextView
                                        android:id="@+id/ofcprice"
                                        android:gravity="end"
                                        android:textSize="18sp"
                                        android:textColor="#000"
                                        android:text="R$0,00"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:weightSum="2"
                                    android:layout_marginTop="12dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/cart_pimg"
                                        android:src="@drawable/money_bill"
                                        android:layout_weight="0.2"
                                        android:layout_width="0dp"
                                        android:layout_height="32dp" />

                                    <TextView
                                        android:id="@+id/cart_pname"
                                        android:layout_marginLeft="8dp"
                                        android:layout_gravity="center"
                                        android:textSize="20dp"
                                        android:text="Dinheiro"
                                        android:layout_weight="1.2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/cart_palterar"
                                        android:textColor="#00f"
                                        android:layout_marginLeft="8dp"
                                        android:layout_gravity="center"
                                        android:gravity="right"
                                        android:textSize="18dp"
                                        android:text="Alterar"
                                        android:layout_weight="0.6"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:background="#fff"
        android:paddingHorizontal="32dp"
        android:weightSum="2"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16dp"
                android:text="Preço Total:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/total"
                android:textColor="#000"
                android:textSize="24dp"
                android:text="R$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btnPlaceOrder"
            android:textAllCaps="true"
            android:text="Fazer Pedido"
            android:textColor="#fff"
            android:background="@drawable/borda_green"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>