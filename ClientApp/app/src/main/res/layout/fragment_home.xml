<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.newcart.newpariscart.HomeFragment">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:weightSum="2"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/home_endereco"
                    android:paddingHorizontal="6dp"
                    android:weightSum="1"
                    android:background="@drawable/borda_green"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_weight="0.1"
                        android:tint="#fff"
                        android:src="@drawable/ic_place_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_hf"
                        android:text="Endereço"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_weight="0.9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="right"
                        android:src="@drawable/paris_text"
                        android:layout_width="120dp"
                        android:layout_height="38dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="32dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/hf_search"
                    android:layout_gravity="center"
                    android:background="@drawable/borda_gray"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_search_black_24dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:text="Pesquisar Estabelecimentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:text="Estabelecimentos Disponíveis:"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_horizontal_menu"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginHorizontal="32dp"
                android:background="#eee"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </LinearLayout>

            <TextView
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:text="Promoções no ParisCart"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/criptos"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="32dp"
                android:layout_width="match_parent"
                android:layout_height="144dp" />

            <!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_horizontal_promos"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            -->

            <LinearLayout
                android:layout_marginHorizontal="32dp"
                android:background="#eee"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_restaurants"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_restaurants_closed"
                android:layout_marginHorizontal="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginHorizontal="5dp"
                android:background="#fff"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </LinearLayout>

        </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>

</FrameLayout>