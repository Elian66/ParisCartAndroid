<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.newcart.newpariscart.DetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:background="@drawable/parintinsbg"
                android:layout_width="match_parent"
                android:layout_height="180dp">

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="-90dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/img_worker"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/paris_logo"
                app:layout_collapseMode="parallax" />

            <TextView
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:id="@+id/name_toolbar_worker"
                android:textSize="23dp"
                android:textColor="@color/colorPrimary"
                android:text="Restaurante AAAAAA"
                android:layout_marginHorizontal="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="7dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:id="@+id/worker_detail_city"
                    android:textSize="17dp"
                    android:text="Categoria"
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/worker_detail_age"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:text="Entrega: R$10,00"
                    android:paddingLeft="5dp"
                    android:layout_weight="1.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#000"
                android:text="DisponÃ­veis no Momento:"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_foods"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>