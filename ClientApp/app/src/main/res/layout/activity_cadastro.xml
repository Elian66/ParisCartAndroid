<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/register_screen"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.newcart.newpariscart.CadastroActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/register_back"
                    android:tint="#fff"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:text="Cadastrar no ParisCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:background="@drawable/borda_edit"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rilixtech.CountryCodePicker
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    app:ccp_defaultCode="55"
                    android:id="@+id/register_ccp"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginRight="8dp"
                    app:met_hideUnderline="true"
                    android:layout_gravity="center"
                    android:id="@+id/register_phone_number"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:textSize="20dp"
                    android:layout_height="50dp"
                    android:hint="Seu número"
                    android:inputType="phone"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:background="@drawable/borda_edit"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1.7"
                    android:hint="Nome de Usuário"
                    android:textSize="20dp"
                    app:met_hideUnderline="true"
                    android:id="@+id/register_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

                <ImageView
                    android:tint="@color/colorPrimary"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:background="@drawable/borda_edit"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1.75"
                    android:id="@+id/register_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />

                <ImageView
                    android:tint="@color/colorPrimary"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_place_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="32dp"
                android:id="@+id/places_recycler_view"
                android:background="#FFF"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:weightSum="2"
                android:background="@drawable/borda_edit"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1.65"
                    android:hint="Crie uma Senha"
                    android:textSize="20dp"
                    app:met_hideUnderline="true"
                    android:id="@+id/register_senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/register_eye"
                    android:tint="@color/colorPrimary"
                    android:layout_weight="0.05"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_remove_red_eye_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:tint="@color/colorPrimary"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_vpn_key_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:layout_marginTop="40dp"
                android:id="@+id/id_register_entrar"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:text="Fazer Cadastro"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:layout_width="190dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>