<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context="com.newcart.newpariscart.EditProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingVertical="16dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eperfil_back"
                android:tint="@color/colorPrimary"
                android:layout_marginHorizontal="24dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nome User"
                    android:fontFamily="sans-serif"
                    android:textSize="24dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="italic"
                    android:id="@+id/prof_sair"
                    android:gravity="right"
                    android:text="Sair da Conta"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:text="Endereço"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1.6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="sans-serif"
                                android:textSize="18dp"
                                android:text="Casa"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ImageView
                            android:src="@drawable/ic_create_black_24dp"
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:textSize="16dp"
                        android:text="Meu Endereço"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Informações"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:text="Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerE_name"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Número de Telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/registerE_pass"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="text"/>

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="CPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerE_senha"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <Button
                android:layout_marginTop="32dp"
                android:id="@+id/id_registerE_entrar"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="Atualizar"
                android:layout_gravity="center"
                android:background="@drawable/borda_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>